while (!w.endOfSim()){ //(!endOfSim(w))
    // you would want to end the simulation if
    // 1. Iterate n times
    // 2. There is some kind of goal to be achieved
    // 3. Both of the above. Goal or n times.
    w.display();
    x=scanner.nextLine();
    w.updateSim(x);
}
w.closeSim();

